import PocketBase from 'pocketbase';

const pb = new PocketBase('http://127.0.0.1:8071'); // or public URL

// get the token from cookies
const token = Astro.cookies.get('pb_auth')?.value;

if (token) {
  pb.authStore.save(token); // load token into authStore
}

// optionally refresh to get full user record
let user = null;
if (pb.authStore.isValid) {
  await pb.collection('users').authRefresh();
  user = pb.authStore.record; // current user info
}
